<% include ../partials/header %>

<div class="container mt-5">
	<h2 class="text-center">Rediģēt <%= story.title %></h2>
	<form action="/stories/<%= story._id %>?_method=PUT" method='POST'>
		<div class="form-group">
			<input class='form-control mx-auto' type="text" name="story[title]" value="<%= story.title %>">
		</div>
		<div class="form-group">
			<input class='form-control mx-auto' type="text" name="story[description]" value="<%= story.description %>">
		</div>
		<div class="form-group text-center">
			<input class='btn btn-secondary' type="submit" value="Pievienot">
		</div>
</form>
</div>


<% include ../partials/footer %>
